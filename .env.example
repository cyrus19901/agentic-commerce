# Server Configuration
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your-secret-key-change-in-production

# Database
DATABASE_URL=./data/shopping.db

# Etsy API (Optional - uses mock data if not provided)
ETSY_API_KEY=
ETSY_SHOP_ID=

# Stripe (Optional - for real payments)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Tunneling (for local HTTPS testing with ChatGPT)
# Get ngrok token from: https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTHTOKEN=

# CORS
ALLOWED_ORIGINS=https://chat.openai.com,https://chatgpt.com
